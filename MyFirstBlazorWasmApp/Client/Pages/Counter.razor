@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<div class="btn-group">
    <button class="btn btn-warning" disabled="@disableDecrementButton" @onclick="DecrementCount">
        -
    </button>
    <button class="btn btn-primary" @onclick="IncrementCount">
        +
    </button>
</div>

@code 
{
    private int currentCount = 0;
    private bool disableDecrementButton => (currentCount==0);

    private void IncrementCount()
    {
        currentCount++;
    }
        private void DecrementCount()
    {
        if (currentCount > 0)
            currentCount--;
    }
}
